<h1>Selected Cocktail </h1>

<div><%= @cocktail.name %></div>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %> <%= dose.ingredient.name %></li>
  <li class="list-group-item">
      <%= dose.ingredient.name %>
      <%= link_to "Remove",
                  cocktail_dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>


<h1>   </h1>
<a href="http://localhost:3000/cocktails" class="btn btn-primary">BACK</a>
<%= link_to 'add dose', new_cocktail_dose_path(@cocktail) %>
